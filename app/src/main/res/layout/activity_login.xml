<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cf222b"

    tools:context="com.example.randysharon.myapplication.MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#cf222b"
        android:text="Login"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="347dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="231dp"
        android:layout_height="35"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Password"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="296dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="231"
        android:layout_height="35"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Email"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="244dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="231dp" />

    <View
        android:id="@+id/view"
        android:layout_width="2dp"
        android:layout_height="52dp"
        android:background="#ece0e0"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="443dp" />

    <View
        android:layout_width="233dp"
        android:layout_height="3dp"
        android:background="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="417dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot?"
        android:background="#cf222b"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="435dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:background="#cf222b"
        tools:layout_editor_absoluteX="220dp"
        tools:layout_editor_absoluteY="435dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="149dp"
        android:layout_height="171dp"
        app:srcCompat="@drawable/siue_logo_white"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="36dp" />

</android.support.constraint.ConstraintLayout>