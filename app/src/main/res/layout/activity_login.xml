<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background='@drawable/siue_logo'
    tools:context="com.example.randysharon.myapplication.MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="419dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="70"
        android:layout_height="19"
        android:background="#c9d7ed"
        android:text="User ID"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="295dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="70dp"
        android:layout_height="19dp"
        android:background="#c9d7ed"
        android:text="Password"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="358dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="231dp"
        android:layout_height="35"
        android:background="#c9d7ed"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="351dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="231"
        android:layout_height="35"
        android:background="#c9d7ed"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="288dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="203dp" />
</android.support.constraint.ConstraintLayout>